<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title + ' | Urban Issues' : 'Urban Issue Reporter' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
</head>
<body>

<% if (currentUser) { %>
<!-- Sidebar Navigation -->
<div class="sidebar" id="sidebar">
  <div class="sidebar-header">
    <div class="brand">
      <i class="bi bi-buildings-fill"></i>
      <span>Urban<strong>Issues</strong></span>
    </div>
  </div>

  <nav class="sidebar-nav">
    <a href="/dashboard" class="nav-item <%= typeof title !== 'undefined' && title === 'Dashboard' ? 'active' : '' %>">
      <i class="bi bi-speedometer2"></i><span>Dashboard</span>
    </a>
    <a href="/issues/new" class="nav-item">
      <i class="bi bi-plus-circle"></i><span>Report Issue</span>
    </a>
    <a href="/issues" class="nav-item <%= typeof title !== 'undefined' && title.includes('Issue') ? 'active' : '' %>">
      <i class="bi bi-list-ul"></i><span>My Reports</span>
    </a>
    <% if (currentUser.role === 'admin') { %>
    <div class="nav-section">ADMIN</div>
    <a href="/admin/dashboard" class="nav-item">
      <i class="bi bi-shield-check"></i><span>Admin Panel</span>
    </a>
    <a href="/admin/issues" class="nav-item">
      <i class="bi bi-gear"></i><span>Manage Issues</span>
    </a>
    <a href="/admin/heatmap" class="nav-item">
      <i class="bi bi-map"></i><span>Heatmap</span>
    </a>
    <a href="/admin/users" class="nav-item">
      <i class="bi bi-people"></i><span>Users</span>
    </a>
    <% } %>
  </nav>

  <div class="sidebar-footer">
    <a href="/profile" class="user-info">
      <img src="<%= currentUser.profileImage || '/img/default-avatar.png' %>" alt="avatar">
      <div>
        <div class="user-name"><%= currentUser.name %></div>
        <div class="user-role badge bg-<%= currentUser.role === 'admin' ? 'danger' : 'primary' %>">
          <%= currentUser.role %>
        </div>
      </div>
    </a>
    <a href="/logout" class="logout-btn"><i class="bi bi-box-arrow-right"></i></a>
  </div>
</div>

<!-- Main Content -->
<div class="main-wrapper">
  <!-- Top Bar -->
  <header class="topbar">
    <button class="sidebar-toggle" id="sidebarToggle">
      <i class="bi bi-list"></i>
    </button>
    <div class="topbar-right">
      <a href="/dashboard/notifications" class="notification-bell" id="notifBell">
        <i class="bi bi-bell"></i>
        <span class="badge" id="notifCount" style="display:none"></span>
      </a>
      <div class="live-indicator"><span class="dot"></span> Live</div>
    </div>
  </header>

  <main class="content-area">
    <!-- Flash Messages -->
    <% if (success && success.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <i class="bi bi-check-circle me-2"></i><%= success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    <% } %>
    <% if (error && error.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <i class="bi bi-exclamation-triangle me-2"></i><%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    <% } %>
<% } else { %>
<main>
  <% if (success && success.length > 0) { %>
  <div class="alert alert-success"><%= success %></div>
  <% } %>
  <% if (error && error.length > 0) { %>
  <div class="alert alert-danger"><%= error %></div>
  <% } %>
<% } %>
